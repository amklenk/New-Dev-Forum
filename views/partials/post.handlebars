{{! Bug Posts iteration }}
{{#each bugs}}
  <div class="card mb-4">
    <a href="#!"><img class="card-img-top" src="{{image_file}}" alt="..." /></a>
    <div class="card-body">
      <div class="small text-muted">{{created_at}}</div>
      <h2 class="card-title h4">{{language}}</h2>
      <p class="card-text">
        {{question}}
      </p>
      <a class="btn btn-primary" href="/seebug{{bug_id}}">See comments</a>
      <button class="btn upvote">🔝 {{upvote_count}}</button>
    </div>
  </div>
{{/each}}